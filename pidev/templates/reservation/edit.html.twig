{% extends 'baseBack.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}

  <body id="reportsPage">
    <div class="" id="home">
      <nav class="navbar navbar-expand-xl">
        <div class="container h-100">
          <a class="navbar-brand" href="index.html">
            <h1 class="tm-site-title mb-0">Admin</h1>
          </a>
          <button
            class="navbar-toggler ml-auto mr-0"
            type="button"
            data-toggle="collapse"
            data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <i class="fas fa-bars tm-nav-icon"></i>
          </button>

          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mx-auto h-100">
              
              
              <li class="nav-item">
                <a class="nav-link" href="/AfficheAgence">
                  <i class="fas  fa-user"></i> Agences
                </a>
              </li>

              <li class="nav-item">
                <a class="nav-link active" href="/AfficheReservation">
                  <i class="fas fa-shopping-cart"></i> Reservations
                </a>
              </li>
           
            </ul>
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link d-block" href="login.html">
                  Admin, <b>Logout</b>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
      <div class="container mt-5">
       
        <!-- row -->
        <div class="row tm-content-row">
          <div class="tm-block-col tm-col-avatar">
            
          </div>
          <div class=" container">
            <div class="tm-bg-primary-dark tm-block tm-block-settings">
              <h2 class="tm-block-title">Modifier Reservation</h2>
                  {{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}
                <div class="form-group col-lg-6">

                  <label for="name">Date</label>
                   {{ form_widget(form.DateRes , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Message'}} ) }}
                                      <lable     style="color: red"       {{ form_errors(form.DateRes) }}</label>
                    <label for="name">Heure</label>
                   {{ form_widget(form.HeureRes , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Message'}} ) }}
                                      <lable     style="color: red"       {{ form_errors(form.HeureRes) }}</label>
                    <label for="name">Methode </label>
                   {{ form_widget(form.MethodP, {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Message'}} ) }}
                                      <lable     style="color: red"       {{ form_errors(form.MethodP) }}</label>
                    <label for="name">Duree</label>
                   {{ form_widget(form.DureeLoc , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Message'}} ) }}
                                      <lable     style="color: red"       {{ form_errors(form.DureeLoc) }}</label>
                    <label for="name">Nom</label>
                   {{ form_widget(form.NomLoc , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Message'}} ) }}
                                      <lable     style="color: red"       {{ form_errors(form.NomLoc) }}</label>
                    <label for="name">Cin</label>
                   {{ form_widget(form.CinLoc , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Message'}} ) }}
                                      <lable     style="color: red"       {{ form_errors(form.CinLoc) }}</label>
               

               
              <br>                                                                              <button  onClick="validateSubmit()" type="SubmitType" class="btn btn-primary py-3 px-5">Modifier</button>

                                                   {{ form_widget(form)}}   
            </div>
          </div>
        </div>
      </div>
      <footer class="tm-footer row tm-mt-small">
        <div class="col-12 font-weight-light">
          <p class="text-center text-white mb-0 px-4 small">
            Copyright &copy; <b>2018</b> All rights reserved. 
            
            Design: <a rel="nofollow noopener" href="https://templatemo.com" class="tm-footer-link">Template Mo</a>
          </p>
        </div>
      </footer>
    </div>

    <script src="../../Back/js/jquery-3.3.1.min.js"></script>
    <!-- https://jquery.com/download/ -->
    <script src="../../Back/js/bootstrap.min.js"></script>
    <!-- https://getbootstrap.com/ -->
  </body>
  {% endblock %}
