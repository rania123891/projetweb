{% block body %}
<center>
    <h1>Type Vehicule</h1>
    <div style="width:100% ;display:flex;flex-direction:column;gap:1rem;" > 
        <a style="width:100%" class="btn btn-primary" href="{{ path('app_typevehicule_index') }}">back to list</a>
       <a  style="width:100%"  class="btn btn-secondary" href="{{ path('app_typevehicule_edit', {'id': typevehicule.id}) }}">Edit</a>
        {{ include('typevehicule/_delete_form.html.twig') }}
    </div>
   
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ typevehicule.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ typevehicule.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ typevehicule.description }}</td>
            </tr>
            <tr>
                <th>Agence</th>
                <td>{{ typevehicule.agence.nomAg }}</td>
            </tr>
        </tbody>
    </table>
</center>
        <hr>
    <div style="display:flex;flex-wrap:wrap;gap:30px;margin:5rem 0;max-width:100%;overflow-y:scroll">
    {% if typevehicule.vehicules|length == 0 %}
    <center>Pas De Vehicule Avec Ce type .</center>
    {% else %}
    {% for vehicule in typevehicule.vehicules %}
            {{ include('vehicule/show.html.twig', {vehicule:vehicule})}}
    {% endfor %}
     {% endif %}
    </div>
    </div>
